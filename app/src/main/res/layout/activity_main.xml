<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.henri.crud_imc.MainActivity">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/listaPessoas"
            android:layout_weight="1">

        </ListView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Cadastro"
            android:id="@+id/btnNovoCadastro"
            android:background="@drawable/button_novo"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/swipe"
            android:layout_toRightOf="@+id/btnNovoCadastro"/>

    </RelativeLayout>

    </LinearLayout>
